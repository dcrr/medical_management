		<record model="ir.ui.view" id="profession_form_view">
            <field name="name">profession.form.view</field>
            <field name="model">profession</field>
			<field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Professions">
					<sheet string="Professions">
						<div class="oe_title">
							<h1>
								<field name="name" nolabel="1" placeholder="Name" required="1"/>
							</h1>
						</div>	
						<group>
							<separator colspan="2"/>
							<label colspan="2" string="For records associated with other records!"/> <!-- attrs="{'invisible':[('staff_ids','=',[])]}"-->
							<field name="active"/>
						</group>						
					</sheet>
   				</form>
            </field>
        </record>
		<record model="ir.actions.act_window" id="profession_action">
